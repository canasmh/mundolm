<%- include("header") -%>

<div class="contact-page">
  <% if (lang=="en") { %>
    <h2 class="question-header">Have a Question?</h2>
    <form action="contact/"method="post">
      <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" class="form-control" id="fullName" placeholder="Your full name">
      </div>
      <div class="form-group">
        <label for="emailAddress">Email/Phone</label>
        <input type="text" class="form-control" id="emailAddress" name="contactInfo" placeholder="Enter email or phone">
      </div>
      <div class="form-group">
        <label for="userMessage">Message</label>
        <textarea id="userMessage" class="form-control" name="message" rows="8" cols="80" placeholder="Write your message here..."></textarea>
        <!-- <textarea type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"></textarea> -->
      </div>
      <button type="submit" class="btn submit-btn">Send Message</button>
    </form>
  <% } else { %>
    <h2 class="question-header">Preguntas?</h2>
    <form action="contact/"method="post">
      <div class="form-group">
        <label for="fullName">Nombre Completo</label>
        <input type="text" class="form-control" id="fullName" placeholder="Su nombre completo">
      </div>
      <div class="form-group">
        <label for="emailAddress">Correo Electrónico o Teléfono</label>
        <input type="text" class="form-control" id="emailAddress" name="contactInfo" placeholder="Ingrese correo o teléfono">
      </div>
      <div class="form-group">
        <label for="userMessage">Mensaje</label>
        <textarea id="userMessage" class="form-control" name="message" rows="8" cols="80" placeholder="Ingrese su mensaje aquí..."></textarea>
        <!-- <textarea type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"></textarea> -->
      </div>
      <button type="submit" class="btn submit-btn">Enviar Mensaje</button>
    </form>
  <% } %>
</div>

<%- include("footer") -%>
