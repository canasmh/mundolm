<%- include("header") -%>

<div class="contact-page">
  <h2 class="question-header"><%= contactUs[0] %></h2>
  <div class="alert alert-success" role="alert">
    <%= alert %>
  </div>
    <form action="contact/"method="post">
      <div class="form-group">
        <label for="fullName"><%= fullName.label %></label>
        <input type="text" class="form-control" id="fullName" name="fullName" placeholder="<%=fullName.placeholder %>">
      </div>
      <div class="form-group">
        <label for="emailAddress"><%= email.label %></label>
        <input type="text" class="form-control" id="emailAddress" name="contactInfo" placeholder="<%= email.placeholder %>">
      </div>
      <div class="form-group">
        <label for="userMessage"><%= message.label %></label>
        <textarea id="userMessage" class="form-control" name="message" rows="8" cols="80" placeholder="<%= message.placeholder %>"></textarea>
      </div>
      <button type="submit" class="btn submit-btn"><%= contactUs[1] %></button>
    </form>
  </div>

<%- include("footer") -%>
